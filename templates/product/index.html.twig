{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<div class="container mt-5">

    <h1 class="mb-4">List Products</h1>

    <a href="{{ path('app_product_new') }}" class="btn btn-success mb-3">Add Product</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Price</th>
                <th>Category</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.category.title }}</td>
                <td>
                    <a href="{{ path('app_product', {id: product.id}) }}" class="btn btn-sm">Click</a>
                    <a href="{{ path('app_product_edit', {id: product.id}) }}" class="btn  btn-sm">Edit</a>
                    <a href="{{ path('app_product_delete', {id: product.id}) }}" class="btn btn-secundary btn-sm">Delete</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

